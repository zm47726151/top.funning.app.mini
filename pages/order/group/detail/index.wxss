/* pages/order/group/detail/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.container .success {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 85rpx 15rpx 85rpx 15rpx;
}

.container .success image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 45rpx;
}

.container .info {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.container .info image {
  width: 310rpx;
  height: 310rpx;
  border-radius: 10rpx;
}

.container .info .content {
  width: 310rpx;
  height: 270rpx;
  border-radius: 10rpx;
  background: #fbf3e8;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.container .info .content .time {
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .info .content .time .item{
  background: #fff;
  padding: 3rpx 6rpx 3rpx 6rpx;
  margin: 0rpx 5rpx 0rpx 5rpx;
}

.container .user_list {
  flex-direction: row;
  display: flex;
  border-bottom-style: solid;
  border-bottom-width: 15rpx;
  border-bottom-color: #eee;
  margin-top: 80rpx;
  padding-bottom: 40rpx;
}

.container .user_list .item {
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .user_list .item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 45rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #ff9800;
}

.container .user_list .item view {
  width: 80rpx;
  height: 80rpx;
  border-radius: 45rpx;
  border-style: dotted;
  border-width: 1rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ff9800;
  border-color: #ff9800;
}

.container .share {
  display: flex;
  flex-direction: column;
  justify-items: center;
  justify-content: center;
  padding: 45rpx;
}

.container .share .button {
  background: #ffa726; 
  color: #fff;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 80rpx;
}

.container .share .button:active {
  background: #ff9800;
}

.container .share .note {
  text-align: center;
  padding: 50rpx;
}

.container .dialog {
  display: none;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background: #00000077; 
  flex-direction: column;
  justify-content: flex-end;
  align-items: stretch;
}

.container .dialog .choice_list {
  background: #fff;
  display: flex;
  flex-direction: row;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  align-items: stretch;
  justify-content: space-around;
}

.container .dialog .choice_list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
} 

.container .dialog .choice_list .item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.container .dialog .button {
  background: #fff;
  padding: 25rpx;
  border-top-color: #eee;
  border-top-style: solid;
  border-top-width: 2rpx;
  text-align: center;
}
.container .dialog .button:active{
  background:#eee;
}
