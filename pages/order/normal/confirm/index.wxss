/* pages/order/normal/confirm/index.wxss */

.content {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 100rpx;
}

.address {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.address .column1 {
  flex-grow: 1;
  flex-shrink: 1;
}

.address .column1 name {
  margin-bottom: 20rpx;
}

.address .column2 {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.address .column2 view{
  margin-left: 20rpx;  
}

.address .column2 image {
  width: 17.5rpx;
  height: 35rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
}

.address .add {
  padding: 20rpx;
  text-align: center;
  border-style: dashed;
  width: 100%;
  border-width: 5rpx;
  border-radius: 15rpx;
}

.address:active {
  background: #eee;
}

.mail_line {
  width: 750rpx;
  height: 40rpx;
}

.title {
  padding: 20rpx;
  margin-top: -25rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}

.goods {
}

.goods .item {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}

.goods .item image {
  width: 219rpx;
  height: 219rpx;
  background: #fefefe;
  margin-right: 20rpx;
}

.goods .item .info {
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  align-items: stretch;
}

.goods .item .info .description {
  flex-grow: 1;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.goods .item .info .size {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.note {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  align-items: center;
}

.note text {
  width: 177rpx;
}

.note input {
  flex-grow: 1;
}

.price {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  justify-content: space-between;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}

.pay {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
}

.pay image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}

.amount {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 100rpx;
  left: 0;
  display: flex;
  align-items: center;
  flex-direction: row;
  padding-left: 20rpx;
  border-top-color: #eee;
  border-top-style: solid;
  border-top-width: 1rpx;
}

.amount .value {
  flex-grow: 1;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.amount .btn_comfirm {
  padding-left: 120rpx;
  padding-right: 120rpx;
  height: 100rpx;
  background: #ffa726;
  display: flex;
  align-items: center;
  color: #fff;
}

.amount .btn_comfirm:active {
  background: #ff9800;
}
