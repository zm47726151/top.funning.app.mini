/* pages/order/normal/detail/ */

page{
  background-color: #f4f4f4;
}

.header {
  padding: 0rpx 40rpx 40rpx 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.header image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.header text {
  color: #fff;
}

.address {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.address  name {
  margin-bottom: 20rpx;
}

.mail_line {
  width: 100%;
  height: 40rpx;
}

.title {
  padding: 20rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goods {
}

.goods .item {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}

.goods .item image {
  width: 219rpx;
  height: 219rpx;
  background: #eff;
  margin-right: 20rpx;
}

.goods .item .info {
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  align-items: stretch;
}

.goods .item .info .description {
  flex-grow: 1;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.goods .item .info .size {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.note {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  padding: 20rpx;
  align-items: center;
}

.note text {
  width: 177rpx;
}

.note input {
  flex-grow: 1;
}

.orderId {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  padding: 20rpx;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}

.orderId view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.orderId .button {
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-radius: 15rpx;
  border-color: #eee;
  border-style: solid;
  border-width: 1rpx;
}

.orderId .button:active {
  background: #eee;
}

.common_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  justify-content: space-between;
  border-bottom-color: #eee;
  border-bottom-style: solid;
  border-bottom-width: 1rpx;
}

.footer {
  display: flex;
  padding: 30rpx 20rpx 30rpx 20rpx;
  flex-direction: row-reverse;
}

.footer .button {
  margin-left: 20rpx;
  border-style: solid;
  border-width: 1rpx;
  border-color: #eee;
  border-radius: 30rpx;
  color: #777;
  padding: 10rpx 20rpx 10rpx 20rpx;
}

.footer .button:active {
  background: #eee;
}

.footer .orange {
  border-style: none;
  color: #fff;
  padding: 10rpx 60rpx 10rpx 60rpx;
  background: #ffa726;
}

.footer .orange:active {
  background: #ff9800;
}
